<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditItemActivity">

    <TextView
        android:text="View/Edit Item"
        android:textSize="@dimen/activity_title_font_size"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/activity_view_bottom_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="List Name:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<!-- TODO make this a spinner -->
    <EditText
        android:id="@+id/edit_item_list_name"
        android:hint="List Name (required)"
        android:layout_marginBottom="@dimen/activity_view_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Item Title:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_item_title"
        android:hint="Item Title (required)"
        android:layout_marginBottom="@dimen/activity_view_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Item Detail:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_item_detail"
        android:hint="Item Detail (optional)"
        android:layout_marginBottom="@dimen/activity_view_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/edit_item_cancel_button"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/edit_item_delete_button"
            android:text="Delete Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/edit_item_update_button"
            android:text="Update Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
