<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.charlesdrews.todolists.AddItemActivity">

    <TextView
        android:text="Create A New Item"
        android:textSize="@dimen/activity_title_font_size"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="List:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/add_item_spinner"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Item Title:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/item_title_input"
        android:hint="Enter Item Title (required)"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Item Detail:"
        android:textSize="@dimen/activity_label_font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/item_detail_input"
        android:hint="Enter Item Detail (optional)"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_new_item_button"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/create_new_item_button"
            android:text="Create"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
